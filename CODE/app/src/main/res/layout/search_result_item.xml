<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/cardLight">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/search_result_image_view"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            tools:background="@drawable/skill_icon_sport"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/search_result_points_icon"
            android:layout_width="25dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_star"
            app:layout_constraintBottom_toBottomOf="@id/search_result_image_view"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/search_result_image_view" />

        <RatingBar
            android:id="@+id/search_result_rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="4dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="2.5"
            android:stepSize="0.1"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            app:layout_constraintStart_toStartOf="@+id/search_result_user_name_text_view"
            app:layout_constraintTop_toBottomOf="@+id/search_result_user_name_text_view" />

        <TextView
            android:id="@+id/search_result_rating_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:gravity="start"
            tools:text="2.5"
            style="@style/AppTheme.Subheader"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/search_result_rating_bar"
            app:layout_constraintStart_toEndOf="@+id/search_result_rating_bar"
            app:layout_constraintTop_toTopOf="@+id/search_result_rating_bar" />

        <TextView
            android:id="@+id/search_result_skill_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:gravity="start"
            tools:text="Yoga"
            style="@style/AppTheme.Body1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/search_result_rating_bar"
            app:layout_constraintTop_toBottomOf="@+id/search_result_rating_bar" />

        <TextView
            android:id="@+id/search_result_category_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:gravity="start"
            tools:text="Sport"
            style="@style/AppTheme.Body1"
            app:layout_constraintStart_toEndOf="@+id/search_result_skill_text_view"
            app:layout_constraintTop_toTopOf="@+id/search_result_skill_text_view" />

        <TextView
            style="@style/AppTheme.Subheader"
            android:id="@+id/search_result_user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:gravity="center"
            tools:text="Noa Glait"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/search_result_image_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/search_result_points_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            tools:text="370"
            style="@style/AppTheme.Subheader"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/search_result_points_icon"
            app:layout_constraintEnd_toStartOf="@id/search_result_points_icon"
            app:layout_constraintTop_toTopOf="@id/search_result_points_icon" />


        <TextView
            android:id="@+id/search_result_level_title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            tools:text="LEVEL:"
            style="@style/AppTheme.Subheader"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/search_result_level_text_view"
            app:layout_constraintEnd_toStartOf="@id/search_result_level_text_view"
            app:layout_constraintTop_toTopOf="@id/search_result_level_text_view" />

        <TextView
            android:id="@+id/search_result_level_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            tools:text="4"
            style="@style/AppTheme.Subheader"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/search_result_user_name_text_view"
            app:layout_constraintEnd_toEndOf="@+id/search_result_points_text_view"
            app:layout_constraintTop_toTopOf="@id/search_result_user_name_text_view" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>