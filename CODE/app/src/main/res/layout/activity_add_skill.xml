<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSkillActivity">

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSkillActivity">

    <TextView
        android:id="@+id/add_skill_title"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:text="@string/add_skill_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/category_spinner"
        app:layout_constraintTop_toTopOf="parent" />


    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:dropDownWidth="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_skill_title" />

    <Spinner
        android:id="@+id/skills_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:dropDownWidth="match_parent"
        app:layout_constraintEnd_toEndOf="@+id/category_spinner"
        app:layout_constraintStart_toStartOf="@+id/category_spinner"
        app:layout_constraintTop_toBottomOf="@+id/category_spinner" />

    <TextView
        android:id="@+id/skill_level_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:text="@string/skill_level_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/category_spinner"
        app:layout_constraintTop_toBottomOf="@+id/skills_spinner" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:max="4"
        app:layout_constraintEnd_toEndOf="@+id/category_spinner"
        app:layout_constraintStart_toStartOf="@+id/category_spinner"
        app:layout_constraintTop_toBottomOf="@+id/skill_level_title" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/skill_details_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight=".70"
        app:layout_constraintEnd_toEndOf="@+id/category_spinner"
        app:layout_constraintStart_toStartOf="@+id/category_spinner"
        app:layout_constraintTop_toBottomOf="@+id/seekBar">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/skill_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/skill_details_hint"
            android:inputType="textMultiLine"
            android:maxLines="5"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/skill_points_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="@string/skill_points_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/points_wrapper"
        app:layout_constraintStart_toStartOf="@+id/category_spinner"
        app:layout_constraintTop_toTopOf="@+id/points_wrapper" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/points_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/points_min_icon"
        app:layout_constraintStart_toEndOf="@+id/skill_points_title"
        app:layout_constraintTop_toBottomOf="@+id/skill_details_wrapper">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/points"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>


    <ImageView
        android:id="@+id/points_min_icon"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@+id/points_wrapper"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/category_spinner"
        app:layout_constraintTop_toTopOf="@+id/points_wrapper" />


    <TextView
        android:id="@+id/skill_address_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:text="@string/skill_address_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/category_spinner"
        app:layout_constraintTop_toBottomOf="@+id/points_wrapper" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/skill_address_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/category_spinner"
        app:layout_constraintStart_toStartOf="@+id/category_spinner"
        app:layout_constraintTop_toBottomOf="@+id/skill_address_title">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/skill_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/skill_address"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:enabled="false"
        android:text="@string/add_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skill_address_wrapper"
        app:layout_constraintVertical_bias="1.0" />



</android.support.constraint.ConstraintLayout>
</ScrollView>
